<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- focused -->
    <item android:drawable="@android:color/white" android:state_focused="true" />
    <!-- focused and pressed -->
    <item android:drawable="@android:color/white" android:state_focused="true"
        android:state_pressed="true" />
    <!-- pressed -->
    <item android:drawable="@color/button_pressed_background_color" android:state_pressed="true" />
    <!-- default -->
    <item>
        <shape 
            android:shape="rectangle">
            <gradient 
                android:startColor="@color/item_background_start_color" 
                android:endColor="@color/item_background_end_color"
                android:angle="-90" />
        </shape>
    </item>
</selector>
